{
	"compilerOptions": {
		"target": "ES2016",
		"lib": [
			"ES2017",
			"DOM"
		],
		"module": "CommonJS",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"@lib/*": ["src/lib/*"]
		}
	},
	"include": [
		"src/**/*.ts"
	]
}
